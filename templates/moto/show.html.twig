{% extends 'base.html.twig' %}

{% block title %}Moto{% endblock %}

{% block body %}
    <h1>Moto</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ moto.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ moto.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ moto.description }}</td>
            </tr>
            <tr>
                <th>Km</th>
                <td>{{ moto.km }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ moto.prix }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ moto.date ? moto.date|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Puissance</th>
                <td>{{ moto.puissance }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_moto_index') }}">back to list</a>

    <a href="{{ path('app_moto_edit', {'id': moto.id}) }}">edit</a>

    {{ include('moto/_delete_form.html.twig') }}
{% endblock %}
